<script>
  document.addEventListener('DOMContentLoaded', function () {
    const swiperCustomerReview = new Swiper('.customer-slider__swiper', {
      spaceBetween: 10,
      slidesPerView: 1,
      autoHeight: true,

      pagination: {
        el: '.customer-slider__pagination',
        clickable: true,
      },

      navigation: {
        nextEl: '.customer-slider__button-next',
        prevEl: '.customer-slider__button-prev',
      },

      breakpoints: {
        1023: {
          slidesPerView: 1.2,
          spaceBetween: 30,
        },

        1300: {
          slidesPerView: 1.5,
          spaceBetween: 30,
        },
      },
    });

    const activeIntervals = new WeakMap();

    function fillCircleImmediately(circle) {
      const target = parseInt(circle.dataset.percent, 10);
      const number = circle.querySelector('.graph-number');
      const progress = circle.querySelector('.graph-progress');
      const radius = 65;
      const circumference = 2 * Math.PI * radius;

      progress.style.strokeDasharray = circumference;
      const offset = circumference - (circumference * target) / 100;
      progress.style.strokeDashoffset = offset;
      number.textContent = `${target}%`;
    }

    function animateCircle(circle) {
      const target = parseInt(circle.dataset.percent, 10);
      const number = circle.querySelector('.graph-number');
      const progress = circle.querySelector('.graph-progress');
      const radius = 65;
      const circumference = 2 * Math.PI * radius;

      progress.style.strokeDasharray = circumference;
      progress.style.strokeDashoffset = circumference;
      progress.style.transition = 'none';

      if (activeIntervals.has(circle)) {
        clearInterval(activeIntervals.get(circle));
      }

      let current = 0;
      const speed = 28;

      const interval = setInterval(() => {
        if (current >= target) {
          clearInterval(interval);
          activeIntervals.delete(circle);
        } else {
          current++;
          number.textContent = `${current}%`;
          const offset = circumference - (circumference * current) / 100;
          progress.style.strokeDashoffset = offset;
          progress.style.transition = 'stroke-dashoffset 0.3s linear';
        }
      }, speed);

      activeIntervals.set(circle, interval);
    }

    function resetCircle(circle) {
      if (activeIntervals.has(circle)) {
        clearInterval(activeIntervals.get(circle));
        activeIntervals.delete(circle);
      }

      const number = circle.querySelector('.graph-number');
      const progress = circle.querySelector('.graph-progress');
      const radius = 65;
      const circumference = 2 * Math.PI * radius;

      progress.style.transition = 'none';
      progress.style.strokeDasharray = circumference;
      progress.style.strokeDashoffset = circumference;
      number.textContent = '0%';
    }

    function updateActiveSlideAnimation() {
      document.querySelectorAll('.graph-circle').forEach((circle) => {
        const slide = circle.closest('.swiper-slide');
        if (slide && slide.classList.contains('swiper-slide-active')) {
          resetCircle(circle);
          animateCircle(circle);
        } else {
          fillCircleImmediately(circle);
        }
      });
    }

    // IntersectionObserver
    const section = document.querySelector('.customer-slider');

    const observer = new IntersectionObserver(
      (entries, observer) => {
        entries.forEach((entry) => {
          if (entry.isIntersecting) {
            updateActiveSlideAnimation();
            observer.unobserve(entry.target);
          }
        });
      },
      {
        threshold: 0.3,
      }
    );

    if (section) {
      observer.observe(section);
    }

    // init slideChange
    swiperCustomerReview.on('slideChangeTransitionEnd', updateActiveSlideAnimation);
  });
</script>

